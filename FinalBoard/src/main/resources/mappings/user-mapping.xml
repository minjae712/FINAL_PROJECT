<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="userDAO">

	<insert id="createUser">
		INSERT INTO MEMBER(ID,ROLE,PASSWORD,EMAIL,IMAGE,NAME,BIRTH,POST,ADDRESS,MEM_CODE,PHONE)
		VALUES(#{id,jdbcType=VARCHAR},#{role},#{password},#{email},#{image},#{name},#{birth},#{post},#{address},CONCAT('ME00',TO_CHAR(MEM_SEQ.NEXTVAL)),#{phone})
	</insert>

	<select id="getUser" resultType="user">
		SELECT * FROM MEMBER WHERE ID =	#{id}
	</select>

	<update id="changePassword">
		UPDATE MEMBER SET PASSWORD= #{password} WHERE ID= #{id}
	</update>

	<select id="find_id" resultType="user">
		SELECT * FROM MEMBER WHERE EMAIL = #{email}
	</select>

	<select id="findPassword" resultType="user">
		SELECT * FROM MEMBER WHERE ID = #{id}
	</select>

	<!-- 회원정보 수정 -->
	<update id="userUpdate">
	 	UPDATE MEMBER SET 
	 	NAME = #{name},
	 	BIRTH = #{birth}, 
	 	EMAIL = #{email}, 
	 	IMAGE = #{image},
	 	POST = #{post},
	 	ADDRESS = #{address},
	 	PHONE = #{phone}
	 	WHERE ID= #{id}
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="userDelete">
		DELETE FROM MEMBER WHERE ID = #{id} AND PASSWORD = #{password}
	</delete>
	
</mapper>
