<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>	
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias type="com.springbook.biz.board.BoardVO" alias="board" />
		<typeAlias type="com.springbook.biz.board.B_MoodVO" alias="B_MOOD" />
		<typeAlias type="com.springbook.biz.board.B_HistoryDTO" alias="B_HISTORY" />
		<typeAlias type="com.springbook.biz.board.NoticeVO" alias="notice" />
		<typeAlias type="com.springbook.biz.user.UserVO" alias="user" />
		<typeAlias type="com.springbook.biz.comment.CommentVO" alias="Comment" />
		<typeAlias type="com.springbook.biz.comment.C_MoodVO" alias="C_MOOD" />
		<typeAlias type="com.springbook.biz.comment.C_HistoryDTO" alias="C_HISTORY" />
		<typeAlias type="com.springbook.biz.convidence.Review_HistoryDTO" alias="Re_history" />
		<typeAlias type="com.springbook.biz.comment.BestCommentDTO" alias="best" />
		<typeAlias type="com.springbook.biz.convidence.ReservationVO" alias="reser" />
		<typeAlias type="com.springbook.biz.convidence.ProductVO" alias="product" />
		<typeAlias type="com.springbook.biz.convidence.BillVO" alias="bill" />
		<typeAlias type="com.springbook.biz.convidence.ReviewVO" alias="review" />
		<typeAlias type="com.springbook.biz.convidence.CartVO" alias="cart" />
		<typeAlias type="com.springbook.biz.user.NaverLoginVO" alias="naver"/>
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/board-mapping.xml" />
		<mapper resource="mappings/user-mapping.xml" />
		<mapper resource="mappings/comment-mapping.xml" />
		<mapper resource="mappings/convidence-mapping.xml" />
		<mapper resource="mappings/naver-mapping.xml" />
	</mappers>
</configuration>